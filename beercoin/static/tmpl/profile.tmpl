<div class="page-header">
	<h1>Profile of {{profile.name}}</h1>
</div>

<div class="row">
	<div class="span2">
	    <div class="thumbnail">
			<img ng-src="{{profile.icon}}" width="200"/>
	    </div>
	</div>
	<div class="span2">
		<b>
			Beer credits: {{profile.balance}}
			<br/>
			Location: {{profile.location}}
		</b>
	</div>
	
	<div ng-switch on="appState.user.username!=profile.name">
		<div ng-switch-when="true">
			<div class="span4">
				<form class="well">
					<fieldset>
						We have just been out.
						<br/><br/>
						<select><option>I paid</option><option>I got</option></select>
						<select><option>1</option><option>2</option><option>3</option></select>
						Beers
						<br/><br/>
						<input type="button" value="Do it!"/>
					</fieldset>
				</form>
			</div>
			<div class="span4">
				<form class="well">
					<fieldset>
						I want to owe this person
						<br/><br/>
						<select><option>1</option><option>2</option><option>3</option></select>
						Beers
						<br/><br/>
						<input type="button" value="Do it!"/>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>

	<h2>Gone out {{(profile.actions|filter:{verb:"freed"}).length}} times in the last 5 months</h2>

	<ul>
		<li ng-repeat="act in profile.actions">{{act.verb}} <span ng-show="act.object">{{act.object.username}}</span>, {{timestamp|since}}</li>
	</ul>
