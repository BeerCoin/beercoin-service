<div class="page-header">
	<h1>Find people</h1>
</div>

<div class="well">
	<form>
		<fieldset>
			Filter by location: <input type="text"/>
			<br/>
			Filter by credit <select><option>Has beers</option><option>In Debt</option></select>
			<br/>
	      <p>
			<a href="#" class="btn btn-primary">Filter</a>
	      </p>
		</fieldset>
	</form>
</div>

<ul class="thumbnails">
	<div data-ng-repeat="profile in profiles">
		<li class="span3">
		    <div class="thumbnail">
			  <img src="{{profile.icon}}" width="150"/>
		      <h3>{{profile.name}}</h3>
		      <h4>{{profile.location}} (Balance: {{profile.balance}} Beers)</h4>
		      <p>
				<a href="/#/profile/{{profile.username}}" class="btn">Go to profile</a>
		      </p>
		    </div>
		</li>
	</div>
</ul>

<br/><br/>